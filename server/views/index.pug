doctype html
html

head
    link(rel="stylesheet" type="text/css" href="style.css")
body

div(class="sidebar")
  div(class="forms")
    form(method="post" action="/table/add")
      div(class="newRecord")
        h3 Create New Entry
        div(class="newRecord")
        input(type="number", name="release_year" placeholder="Year of release" min=1920 class="textInput")
        div(class="newRecord")
        input(type="text", name="album" placeholder="Album Title" class="textInput")
        div(class="newRecord")
        input(type="text", name="artist", placeholder="Artist Name" class="textInput")
        div(class="newRecord")
        input(type="text", name="genre", placeholder='Genre' class="textInput")
        div(class="newRecord")
        input(type="text", name="subgenre" placeholder="Subgenre" class="textInput")
        div(class="newRecord")
        button(type="submit") Create!
    form(method="POST" action="/table/amend?_method=PUT")
      div(class="updateEntry")
        h3 Update Existing Entry
        div(class="updateEntry")
        input(type="number", name="release_year" placeholder="Year of release" min=1920 class="textInput")
        div(class="updateEntry")
        input(type="text", name="album" placeholder="Album Title" class="textInput")
        div(class="updateEntry")
        input(type="text", name="artist", placeholder="Artist Name" class="textInput")
        div(class="updateEntry")
        input(type="text", name="genre", placeholder='Genre' class="textInput")
        div(class="updateEntry")
        input(type="text", name="subgenre" placeholder="Subgenre" class="textInput")
        div(class="updateEntry")
        input(type="text", name="id" placeholder="Record Number" class="textInput")
        div(class="updateEntry")
        button(type="submit") Update!
    form(method="POST" action="/table/del?_method=DELETE")
      div(class="deleteEntry")
        h3 Delete Entry
        div(class="deleteEntry")
        input(type="number" placeholder="Catalogue Number" class="textInput" name="id")
        button(type="submit") Delete!
    form(method="GET" action="table/get")
      div(class="getEntry")
        h3 Get Entry
        input(type="number" name="id" placeholder="Record Number" class="textInput")
        button(type="submit") Get!
